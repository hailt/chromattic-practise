<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
    <portlet>
        <description xml:lang="EN">Upload Portlet</description>
        <portlet-name>UploadPortlet</portlet-name>
        <display-name xml:lang="EN">Upload Portlet</display-name>
        <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>
        <init-param>
            <name>webui.configuration</name>
            <value>/WEB-INF/conf/portlet/configuration.xml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.UploadPortlet.UploadPortlet</resource-bundle>
        <portlet-info>
            <title>Upload Portlet</title>
            <short-title>Upload Portlet</short-title>
            <keywords>Upload Portlet</keywords>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>galleryPath</name>
                <value>sites content/live/acme/documents</value>
                <read-only>false</read-only>
            </preference>
        </portlet-preferences>
        
        <supported-publishing-event>
         <name>NewPhotoUploaded</name>
      </supported-publishing-event>
    </portlet>
    
    <event-definition>
      <name>NewPhotoUploaded</name>
   </event-definition>
</portlet-app>